<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white">

    <!-- 왼쪽 섹션: 날짜와 주유소 아이콘 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/station_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_gas_station"
            android:contentDescription="주유소 아이콘"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-11-23"
            android:textSize="12sp"
            android:textColor="#888888"
            android:gravity="center" />
    </LinearLayout>

    <!-- 중간 섹션 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/fuel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주유 13.64L"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/distance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구간 249km / 18.26km/L"
            android:textSize="12sp"
            android:textColor="#888888" />
    </LinearLayout>

    <!-- 오른쪽 섹션 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/price_per_liter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,466 ₩/L"
            android:textSize="12sp"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/total_cost_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₩20,000"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
