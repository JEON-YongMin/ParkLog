<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:elevation="2dp"
    android:layout_margin="8dp">

    <!-- 왼쪽 섹션: 주유소 아이콘과 날짜 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- 주유소 아이콘 -->
        <ImageView
            android:id="@+id/station_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_gas_station"
            android:contentDescription="주유소 아이콘"
            android:layout_marginBottom="8dp" />

        <!-- 날짜 -->
        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-11-23"
            android:textSize="12sp"
            android:textColor="#888888"
            android:gravity="center" />
    </LinearLayout>

    <!-- 중간 섹션: 주유소 이름과 거리 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:gravity="center_vertical">

        <!-- 주유소 이름 -->
        <TextView
            android:id="@+id/station_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지에스칼텍스 서울점"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <!-- 거리 (주유 기록일 경우 표시) -->
        <TextView
            android:id="@+id/distance_text_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주행 거리 320km"
            android:textSize="12sp"
            android:textColor="#888888"
            android:visibility="gone" />
    </LinearLayout>

    <!-- 오른쪽 섹션: 거리, 주유량, 1L당 가격, 총 비용 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- 거리 (주행 기록일 경우 표시) -->
        <TextView
            android:id="@+id/distance_text_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주행 거리 500km"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <!-- 1L당 가격 -->
        <TextView
            android:id="@+id/price_per_liter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,400 ₩/L"
            android:textSize="12sp"
            android:textColor="#888888"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <!-- 주유량 (주유 기록일 경우) -->
        <TextView
            android:id="@+id/fuel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주유 35.7L"
            android:textSize="12sp"
            android:textColor="#888888"
            android:gravity="end"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <!-- 총 비용 -->
        <TextView
            android:id="@+id/total_cost_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₩50,000"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="end"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
